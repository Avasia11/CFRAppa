@model CFRApp.Models.User
@{
    ViewBag.Title = "Înregistrare";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="d-flex flex-row shadow rounded overflow-hidden" style="width: 900px;">

        <!-- Coloană imagine -->
        <div style="flex: 1;">
            <img src="~/images/register_left.png"
                 alt="CFR tren"
                 style="width: 100%; height: 100%; object-fit: cover;" />
        </div>

        <!-- Coloană formular -->
        <div style="flex: 1;" class="p-5 bg-white d-flex align-items-center">
            <div style="width: 100%;">
                <h3 class="mb-4 text-center">Creează un cont nou</h3>

                <form asp-action="Register" method="post">
                    <div class="mb-3">
                        <label class="form-label">Nume complet</label>
                        <input asp-for="Name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" type="email" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Parolă</label>
                        <input asp-for="Password" class="form-control" type="password" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Înregistrare</button>
                </form>

                <div class="mt-3 text-center">
                    Ai deja cont? <a href="/Account/Login">Autentifică-te</a>
                </div>
            </div>
        </div>

    </div>
</div>
