<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CFRApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CFRApp.styles.css" asp-append-version="true" />
  
</head>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<body>
    <body>
        @if (Context.Request.Path != "/Account/Login" && Context.Request.Path != "/Account/Register")
        {
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary px-4">
                <a class="navbar-brand" href="/Home/Dashboard">CFR Călători</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="/Home/Dashboard">Acasă</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Route/Search">Caută trenuri</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Ticket/MyTickets">Biletele mele</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Settings">Setări cont</a></li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <span class="navbar-text text-white me-3">
                                @($"👤 {Context.Session.GetInt32("UserId") ?? 0}")
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Account/Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        }

        <div class="container-fluid">
            @RenderBody()
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>

    }

    <div>
    @RenderBody()
</div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
