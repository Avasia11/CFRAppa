<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CFRApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CFRApp.styles.css" asp-append-version="true" />
  
</head>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<body>
    <body>
        @if (Context.Request.Path != "/Account/Login" && Context.Request.Path != "/Account/Register")
        {
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
                <a class="navbar-brand fw-bold" href="/Home/Dashboard">CFRApp</a>

                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav">

                        <!-- Functionalități -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                📋 Funcționalități
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Route/Search">🔍 Caută trenuri</a></li>
                                <li><a class="dropdown-item" href="/Ticket/MyTickets">🎫 Biletele mele</a></li>
                                <li><a class="dropdown-item" href="/Delay/LiveStatus">🚦 Status trenuri</a></li>
                                <li><a class="dropdown-item" href="/Map/Stations">📍 Harta stațiilor</a></li>
                                <li><a class="dropdown-item" href="/Feedback/Suggest">📝 Feedback</a></li>
                            </ul>
                        </li>

                        <!-- User dropdown -->
                        <li class="nav-item dropdown ms-3">
                            <a class="nav-link dropdown-toggle" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                👤 @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Account/Settings">⚙️ Setări cont</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item text-danger" href="/Account/Logout">🚪 Deconectare</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>

        }

        <div>
            @RenderBody()
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    </body>


</html>
